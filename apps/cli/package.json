{
  "name": "@migrationpilot/cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "MigrationPilot CLI tool for legacy code modernization",
  "bin": {
    "migrationpilot": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@migrationpilot/core": "workspace:*",
    "@migrationpilot/parsers": "workspace:*",
    "@migrationpilot/agents": "workspace:*",
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.14",
    "table": "^6.8.1",
    "glob": "^10.3.10",
    "yaml": "^2.3.4",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
